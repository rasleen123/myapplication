<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hehe">


    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="55dp"
        android:text=" venue's"
        />


    <Button
        android:id="@+id/add_decoraters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/add_button"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:text="decoraters"
        />

    <Button
        android:id="@+id/add_caterers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_button"
        android:layout_alignStart="@+id/add_button"
        android:layout_below="@+id/add_decoraters"
        android:layout_marginTop="25dp"
        android:text="caterers"
        />



    <Button
        android:id="@+id/add_dj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_decoraters"
        android:layout_alignRight="@+id/add_decoraters"
        android:layout_below="@+id/add_caterers"
        android:text=" Dj"
        />

    <Button
        android:id="@+id/add_photographer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_caterers"
        android:layout_alignStart="@+id/add_caterers"
        android:layout_below="@+id/add_dj"
        android:layout_marginTop="20dp"
        android:text=" photographer's"
        />

    <Button
        android:id="@+id/add_designers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_dj"
        android:layout_alignRight="@+id/add_dj"
        android:layout_below="@+id/add_photographer"
        android:layout_marginTop="31dp"
        android:text=" designers"
        />

    <Button
        android:id="@+id/add_saloon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_caterers"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/add_caterers"
        android:layout_marginBottom="21dp"
        android:text=" saloon's"
        />

</RelativeLayout>