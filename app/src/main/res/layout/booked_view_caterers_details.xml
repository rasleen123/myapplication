<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/caterer"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_caterername"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:hint="caterer's name"
        android:textColorHint="#000" />



    <TextView
        android:id="@+id/tv_catererloc"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:hint=" caterer's location"
        android:textColorHint="#000" />

    <TextView
        android:id="@+id/tv_catererservices"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:hint="services"
        android:textColorHint="#000" />


    <TextView
        android:id="@+id/tv_catererprice"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:hint="price"

        android:textColorHint="#000" />

</LinearLayout>

