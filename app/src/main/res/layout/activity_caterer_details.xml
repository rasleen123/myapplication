<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/caterer"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_caterername"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:hint="caterer's name"
        android:textColorHint="#000" />



    <EditText
        android:id="@+id/et_catererloc"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:hint=" caterer's location"
        android:textColorHint="#000" />

    <EditText
        android:id="@+id/et_catererservices"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:hint="services"
        android:textColorHint="#000" />


    <EditText
        android:id="@+id/et_catererprice"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:hint="price"

        android:textColorHint="#000" />

    <Button
        android:id="@+id/save_caterer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/price"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/price"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:onClick="save_caterer"
        android:text=" save"


        />
</LinearLayout>
